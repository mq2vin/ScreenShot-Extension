{
  "name": "ScreenShot",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Simple extension to capture and save web pages in PNG format.",
  "permissions": ["activeTab", "downloads", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}